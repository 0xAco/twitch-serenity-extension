{
  "name": "Serenity extension for Twitch",
  "description": "Keep your head free from anxiety while you stream by hiding Twitch stats",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_title": "Serenity extension for Twitch",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["https://www.twitch.tv/*"]
}