{
  "name": "Serenity - hide twitch viewer count",
  "short_name": "Serenity",
  "description": "Keep your head free while you stream by hiding Twitch stats",
  "version": "1.1.0",
  "manifest_version": 3,
  "permissions": ["scripting", "tabs", "storage"],
  "host_permissions": ["https://*.twitch.tv/*"],
  "action": {
    "default_title": "Serenity extension for Twitch",
    "default_popup": "src/popup/popup.html"
  },
  "icons": {
    "16": "public/icon16.png",
    "32": "public/icon32.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "background": {
    "service_worker": "src/service-worker.js"
  },
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Change mode"
    }
  }
}